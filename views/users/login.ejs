<% layout("/layouts/boilerplate") -%>
<a href="/listings" class="btn btn-outline-dark btn-sm">Back to Home</a>
<div class="row mb-5 login">
  <div class="mt-5">
    <center>
      <h1 class="mb-5">Login back to Urban Trendz</h1>
    </center>

    <div class="col-6 offset-3">
      <form action="/login" method="POST" class="needs-validation" novalidate>
        <!-- username -->
        <div class="mb-3">
          <label for="username" class="form-label">Username</label>
          <input
            name="username"
            id="username"
            type="text"
            class="form-control"
            required
          />
        </div>

        <!-- password -->
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input
            name="password"
            id="password"
            type="password"
            class="form-control"
            required
          />
        </div>

        <button class="btn btn-outline-success">Login</button>
        <a href="/signup" class="btn btn-outline-danger m-3">SignUp</a>
      </form>
    </div>
  </div>
</div>
